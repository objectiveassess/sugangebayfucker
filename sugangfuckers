<script>
  // ëŒ€í™” ëª¨ë‹¬
  function openChat() {
    document.getElementById("chatModal").style.display = "block";
    document.getElementById("userMessage").value = "";
    document.getElementById("chatBox").innerHTML = '<div><strong>íŒë§¤ì:</strong> ê±°ë˜í•˜ì‹œê² ì–´ìš”?</div>';
  }

  function sendMessage() {
    const input = document.getElementById("userMessage");
    const message = input.value.trim();
    if (message) {
      const chatBox = document.getElementById("chatBox");
      const userMsg = document.createElement("div");
      userMsg.innerHTML = `<strong>ë‚˜:</strong> ${message}`;
      chatBox.appendChild(userMsg);

      setTimeout(() => {
        alert("âŒ ê°•ì˜ë¥¼ ëˆ ì£¼ê³  ê±°ë˜í•˜ë‹¤ë‹ˆ...\n\nì§€ê¸ˆ ë‹¹ì‹ ì€ ìˆ˜ê°•ì‹ ì²­ ì•”í‘œìƒì…ë‹ˆë‹¤.\nì´ í–‰ë™ì€ ë¶ˆë²•ì€ ì•„ë‹ˆì§€ë§Œ ë¶€ë„ëŸ¬ìš´ ì¼ì…ë‹ˆë‹¤.");
        document.getElementById("chatModal").style.display = "none";
      }, 500);
    }
  }

  // ì°œí•˜ê¸° ë²„íŠ¼
  function toggleLike(button) {
    button.classList.toggle("liked");
    if (button.classList.contains("liked")) {
      button.innerText = "â¤ï¸ ì°œí•¨";
    } else {
      button.innerText = "â¤ï¸ ì°œí•˜ê¸°";
    }
  }

  // íŒë§¤ ë“±ë¡ ëª¨ë‹¬
  function openSellModal() {
    document.getElementById("sellModal").style.display = "block";
    document.getElementById("lectureName").value = "";
    document.getElementById("minPrice").value = "";
    document.getElementById("wishPrice").value = "";
    document.getElementById("lectureDesc").value = "";
  }

  // íŒë§¤ ë“±ë¡ ì²˜ë¦¬
  function submitLecture() {
    const name = document.getElementById("lectureName").value.trim();
    const minPrice = document.getElementById("minPrice").value.trim();
    const wishPrice = document.getElementById("wishPrice").value.trim();
    const desc = document.getElementById("lectureDesc").value.trim();

    if (!name || !minPrice || !wishPrice) {
      alert("ëª¨ë“  í•„ìˆ˜ ì •ë³´ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.");
      return;
    }

    const lectureList = document.getElementById("lectureList");

    const card = document.createElement("div");
    card.className = "lecture-card";
    card.innerHTML = `
      <div class="lecture-title">${name}</div>
      <div class="lecture-detail">${desc} / ìµœì†Œê°€: ${minPrice}ì› / í¬ë§ê°€: ${wishPrice}ì›</div>
      <div class="lecture-detail">íŒë§¤ì: <strong>ìµëª…íŒë§¤ì</strong></div>
      <button class="buy-button" onclick="openChat()">ì…ì°°í•˜ê¸°</button>
      <button class="like-button" onclick="toggleLike(this)">â¤ï¸ ì°œí•˜ê¸°</button>
    `;

    lectureList.appendChild(card);

    alert("âŒ ê°•ì˜ê¹Œì§€ íŒ”ì•„ë¨¹ë‹¤ë‹ˆ...\n\në‹¹ì‹ ì€ ì§€ê¸ˆ ìˆ˜ê°•ê¶Œì„ ê²½ë§¤ì— ë¶€ì¹˜ê³  ìˆìŠµë‹ˆë‹¤.\nì •ë§ ê´œì°®ì€ ê±¸ê¹Œìš”? ğŸ¤”");

    document.getElementById("sellModal").style.display = "none";
  }

  // ëª¨ë‹¬ ì™¸ë¶€ í´ë¦­ ì‹œ ë‹«ê¸°
  window.onclick = function(event) {
    const chatModal = document.getElementById("chatModal");
    const sellModal = document.getElementById("sellModal");
    if (event.target === chatModal) chatModal.style.display = "none";
    if (event.target === sellModal) sellModal.style.display = "none";
  };
</script>

